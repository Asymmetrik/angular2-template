{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",

		"moduleResolution": "node",

		"declaration": false,
		"noEmitHelpers": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		"lib": [ "es2015", "dom" ],

		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,

		"allowUnreachableCode": false,
		"noUnusedParameters": true,
		"noUnusedLocals": true,

		"sourceMap": true
	},

	"exclude": [
		"node_modules",
		"dist",
		"**/*.ngfactory.ts",
		"src/**/main*.ts"
	]
}
